@model Book

<div class="card m-1">
    <div class="container">
        <div class="row">
            <div class="col-3" style="color:blue">
                <i class="fa fa-book fa-5x m-5"></i>
            </div>
            <div class="col-9">
                <h4>@Model.Title</h4>
                <div>@Model.AuthorFirstName @Model.AuthorLastName</div>
                <div>
                    <div class="badge badge-pill badge-primary">@Model.Classification</div> / @Model.Category
                </div>
                <div>@Model.Publisher - @Model.ISBN</div>
                <div># of Pages: @Model.NumPages</div>
                <span class="ml-1" style="float:right">$@Model.Price</span>
                <form id="@Model.BookId" asp-page="/cart" method="post">
                    <input type="hidden" asp-for="BookId" />
                    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                    <span class="card-text p-1">
                        <button type="submit" class="btn-success btn-sm" style="float:right">
                            <i class="fa fa-plus"></i>
                        </button>
                    </span>
                </form>
            </div>
        </div>
    </div>
</div>